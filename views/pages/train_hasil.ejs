<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <title>Resoult-Javaloca</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
          <link rel="stylesheet" href="/css/tamplate_1.css">
          <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
</head>
<body>
    <header>
       <div class="container-fluid p-0">
        <%- include('../layouts/navbar.ejs'); %>
       </div>
    </header>

  <br>
  <h1 class="text-center">Train-resoult</h1>

    <br>
    <br>

    <% transport.forEach((transport) => { %>
        <div class="container mt-7 mb-5">
            <div class="d-flex justify-content-center row">
                <div class="col-md-12">
                    <div class="row p-2 bg-white border rounded">
                        <div class="col-md-3 mt-1">
                            <div class="d-flex align-items-center">
                                <div class="p-2 bd-highlight">
                                    <img style="height: 50px; width: 70px;" src="<%= transport.gambar %>">
                                </div>
                                <div class="p-2 bd-highlight"><h4><%= transport.name %></h4></div>
                            </div>

                            
                        </div>
                    
                            <div class="col">
                                <div class="d-flex flex-column bd-highlight mb-3" style="text-align: center;">
                                    <div class="p-2 bd-highlight"><h4><%= transport.waktu_from %></h4></div>
                                    <div class="p-2 bd-highlight"><%= transport.from %></div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="d-flex flex-column bd-highlight mb-3" style="text-align: center;"> 
                                <div class="p-2 bd-highlight"><h4><%= transport.waktu_to %></h4></div>
                                <div class="p-2 bd-highlight"><%= transport.to %></div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="d-flex flex-column bd-highlight mb-3" style="text-align: center;"> 
                                    <div class="p-2 bd-highlight"><h4><%= transport.waktu %></h4></div>
                                    <div class="p-2 bd-highlight">Direct</div>
                                </div>
                            </div>
                        
                        <div class="align-items-center align-content-center col-md-3 border-left">
                                <h4 class="mr-1">IDR <%= transport.price %></h4>
                            <div class="d-flex flex-row mt-4">
                                <div class="p-1 bd-highlight">
                                    <button class="btn btn-primary btn-md" type="button" data-toggle="collapse" data-target="#<%= transport.kode %>" aria-expanded="false" aria-controls="collapseExample">More</button>
                                </div>
                                <div class="p-1 bd-highlight">
                                    <a href="/transport/confirmation/<%=transport._id %>" class="btn btn-primary btn-md" type="button" data-toggle="tooltip">Choose</a>
                                </div>
                            </div>
                    </div>
                </div>
                <div class="collapse" id="<%= transport.kode %>"> 
                    <div class="row p-2 bg-white border rounded">
                         
                            <div class="col-md-3">
                                        <h5><%= transport.from %></h5>
                                        <p><%= transport.ter_from %></p>
                                        <p class="text-muted"><%= transport.waktu_from %></p>
                            </div>
                            <div class="col-md-3">
                                <h5><%= transport.to %></h5>
                                <p><%= transport.ter_to %></p>
                                <p class="text-muted"><%= transport.waktu_to %></p>
                            </div>
                           
                            <div class="col">
                                <div class="d-flex flex-row bd-highlight justify-content-around">
                                    <div class="p-3 bd-highlight">
                                            <h5 class="p-2 bd-highlight"><%= transport.kode %></h5>
                                            <div class="p-2 bd-highlight"><%= transport.class %></div>
                                        </div> 
    
                                   
                                    <div class="p-3 bd-highlight">
                                       
                                            <h5 class="p-2 bd-highlight">Train code <%= transport.traincode %></h5>
                                            <div class="p-2 bd-highlight">Seat layout 2-2</div>
                                        </div> 
                                    </div>
                                  </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
                </div>

        <% }) %>

            </div>
        </div>
    </div>
        
        <%- include('../layouts/footer.ejs'); %>
      
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</body>
</html>